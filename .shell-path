#!/bin/sh

system_type=$(uname -s)

export GOPATH=$HOME/.go:$HOME/repos/go

if [ -d $HOME/repos/mevislab ] ; then
    export MLAB_ROOT=$HOME/repos/mevislab
    export MLAB_COMPILER=gcc-64
    export LSAN_OPTIONS=suppressions="$MLAB_ROOT"/MeVis/BuildSystem/BuildTools/linux/LeakSanitizerSuppressions.supp
fi

if [ "$system_type" = "Darwin" ]; then
    export PATH=$HOME/bin::/usr/local/bin:/usr/local/sbin:$PATH
    export PATH=$HOME/.go/bin:$PATH
    qt_version=$(find $HOME/Qt -iname "5.*.*" -maxdepth 1 | sort --version-sort | tail -n1)
    if test -n "$qt_version"; then
        export PATH="$qt_version/clang_64/bin":$PATH
    fi
elif [ "$system_type" = "Linux" ]; then
    export GOROOT=/usr/lib/go
    export PATH=$PATH:${HOME}/.local/bin:${HOME}/.go/bin/:/usr/pkg/tool/linux_amd64:${HOME}/.cargo/bin
    export LD_LIBRARY_PATH=${LD_LIBRARY_PATH}:/usr/local/lib
fi
